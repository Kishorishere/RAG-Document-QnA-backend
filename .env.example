GROQ_API_KEY=gsk_***************** ## use your groq api key
GROQ_MODEL=llama-3.1-8b-instant


EMBEDDING_MODEL=all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384


# QDRANT VECTOR DATABASE 

QDRANT_URL=http://localhost:6333
QDRANT_COLLECTION=documents


SQLITE_URL=sqlite:///./storage/sqlite/app.db


# CHUNKING CONFIGURATION

CHUNK_SIZE=500
CHUNK_OVERLAP=50
DEFAULT_CHUNKING_STRATEGY=recursive


# FILE UPLOAD SETTINGS

MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=pdf,txt
UPLOAD_DIR=./storage/uploads


# RAG SETTINGS

# Number of chunks to retrieve for context
TOP_K_RESULTS=5
# Maximum conversation history messages to include
MAX_HISTORY_MESSAGES=10


# LOGGING

LOG_LEVEL=INFO
LOG_DIR=./logs


# API SETTINGS

API_VERSION=v1
API_TITLE=RAG Backend API
API_DESCRIPTION=Document Q&A and Booking System with RAG
CORS_ORIGINS=*


# APPLICATION SETTINGS

APP_HOST=0.0.0.0
APP_PORT=8000
DEBUG=True